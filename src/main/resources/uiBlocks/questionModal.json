{
  "type": "modal",
  "title": {
    "type": "plain_text",
    "text": "New question"
  },
  "submit": {
    "type": "plain_text",
    "text": "Ask a question"
  },
  "close": {
    "type": "plain_text",
    "text": "Cancel"
  },
  "blocks": [
    {
      "type": "input",
      "label": {
        "type": "plain_text",
        "text": "Title"
      },
      "element": {
        "type": "plain_text_input",
        "placeholder": {
          "type": "plain_text",
          "text": "Be specific and imagine youâ€™re asking a question to another person"
        }
      }
    },
    {
      "type": "input",
      "label": {
        "type": "plain_text",
        "text": "Body"
      },
      "element": {
        "type": "plain_text_input",
        "multiline": true,
        "placeholder": {
          "type": "plain_text",
          "text": "Include all the information someone would need to answer your question"
        }
      }
    },
    {
      "type": "input",
      "label": {
        "type": "plain_text",
        "text": "Tags"
      },
      "element": {
        "type": "multi_static_select",
        "placeholder": {
          "type": "plain_text",
          "text": "Add tags to describe what your question is about (e.g. Java Spring)"
        },
        "options": [
          {
            "text": {
              "type": "plain_text",
              "text": "Java"
            },
            "value": "java"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "Spring"
            },
            "value": "spring"
          },
          {
            "text": {
              "type": "plain_text",
              "text": "React"
            },
            "value": "react"
          }
        ]
      }
    }
  ]
}
